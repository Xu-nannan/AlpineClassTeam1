<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Switch
        android:id="@+id/switch_air"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="22dp"
        android:text="空调"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_AIR"
        app:layout_constraintStart_toEndOf="@+id/imageView_AIR"
        app:layout_constraintTop_toTopOf="@+id/imageView_AIR" />

    <ImageView
        android:id="@+id/imageView_BREAK"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_BELT"
        app:layout_constraintEnd_toEndOf="@+id/imageView_BELT"
        app:layout_constraintStart_toStartOf="@+id/imageView_BELT"
        app:srcCompat="@drawable/ic_break_down" />

    <Switch
        android:id="@+id/sw_stopcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手刹"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_BREAK"
        app:layout_constraintEnd_toEndOf="@+id/sw_safety"
        app:layout_constraintStart_toStartOf="@+id/sw_safety"
        app:layout_constraintTop_toTopOf="@+id/imageView_BREAK"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView_WIPER"
        android:layout_width="77dp"
        android:layout_height="87dp"
        android:layout_marginTop="9dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_BELT"
        app:layout_constraintStart_toStartOf="@+id/imageView_BELT"
        app:layout_constraintTop_toBottomOf="@+id/imageView_BELT"
        app:srcCompat="@drawable/ic_wiper_close" />

    <Switch
        android:id="@+id/sw_safety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="安全带"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_BELT"
        app:layout_constraintStart_toEndOf="@+id/imageView_BELT"
        app:layout_constraintTop_toTopOf="@+id/imageView_BELT"
        app:layout_constraintVertical_bias="0.824" />

    <ImageView
        android:id="@+id/imageView_BELT"
        android:layout_width="67dp"
        android:layout_height="84dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.443"
        app:srcCompat="@drawable/ic_belt_up" />

    <Switch
        android:id="@+id/sw_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="雨刷器"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_WIPER"
        app:layout_constraintEnd_toEndOf="@+id/sw_safety"
        app:layout_constraintStart_toStartOf="@+id/sw_safety"
        app:layout_constraintTop_toTopOf="@+id/imageView_WIPER" />

    <ImageView
        android:id="@+id/imageView_AIR"
        android:layout_width="269dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/ic_air_close" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>